<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="col-sm-12 col-md-6 col-md-offset-3">

        <h1>Register</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form name="registerForm" class="form-horizontal" action="/register" method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="email" class="control-label col-sm-4">Email:</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" name="email" required>
                    <div id="emailMessage" class="invalid-feedback" style="display: none">
                        Please enter a valid email address.
                    </div>
                </div>

            </div>
            <div class="form-group">
            <label for="password" class="control-label col-sm-4">Password:</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" name="password" required>
                    <div id="passwordMessage" class="invalid-feedback" style="display: none">
                        Please enter a strong password that is at least 8 characters long.
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label for="confirmPassword" class="control-label col-sm-4">Confirm Password:</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" name="confirmPassword" required>
                    <div id="confirmMessage" class="invalid-feedback" style="display: none">
                        Passwords do not match.
                    </div>
                </div>

            </div>
            <br/>

            <div class="form-group">
                <label for="fname" class="control-label col-sm-4">First name:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="fname" required>
                    <div id="fnameMessage" class="invalid-feedback" style="display: none">
                        Please enter a first name.
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label for="lname" class="control-label col-sm-4">Last name:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="lname" required>
                    <div id="lnameMessage" class="invalid-feedback" style="display: none">
                        Please enter a last name.
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label for="phone" class="control-label col-sm-4">Phone number:</label>
                <div class="col-sm-8">
                    <input type="tel" class="form-control" name="phone" required>
                    <div id="phoneMessage" class="invalid-feedback" style="display: none">
                        Please enter a valid North America phone number.
                    </div>
                </div>

            </div>

            <div class="text-right">
                <a href="/" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary btn-lg">Register</button>
            </div>

        </form>

        <hr>

        <p>Already have an account? <a href="/login">Login</a></p>

    </div>

</div>
<script src="javascripts/register.js"></script>
<style>
    .invalid-feedback {
        color: red;
    }
</style>
</body>
</html>