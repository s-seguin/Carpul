<!doctype html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body {
          padding-top:80px;
        }
        #carpul-icon {
          width: 50%;
          height: 50%;
          display: block;
          margin-left: auto;
          margin-right: auto;
        }
    </style>
</head>
<body>
  <div class="container" id="login-container">
    <div class="row">
      <div class="col-sm-12 col-md-6 col-md-offset-3">
          <img id="carpul-icon" src="images/logo.png">
          <h1 class="col-sm-12">Login</h1>

          <!-- show any messages that come back with authentication -->
          <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
          <% } %>

          <!-- LOGIN FORM -->
          <form class="form-horizontal" action="/login" method="post">
              <div class="form-group">
                  <label for="email" class="control-label col-sm-2">Email</label>
                  <div class="col-sm-10">
                      <input style="border-color: #BFD3E2" type="text" class="form-control" name="email">
                  </div>
              </div>
              <div class="form-group">
                  <label for="password" class="control-label col-sm-2">Password</label>
                  <div class="col-sm-10">
                      <input style="border-color: #BFD3E2" type="password" class="form-control" name="password">
                  </div>
              </div>
              <div class="text-right">
                  <a href="/" class="btn btn-secondary btn-lg">Cancel</a>
                  <button type="submit" class="btn btn-primary btn-lg">Login</button>
              </div>
          </form>

          <hr>
          <p>Need an account? <a href="/register">Register</a></p>

      </div>
    </div>
  </div>
</body>
</html>
